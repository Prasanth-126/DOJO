<!DOCTYPE html>
<html>
<head>
    <title>Dojo Ajax Without Window</title>

   <!--  <script src="https://ajax.googleapis.com/ajax/libs/dojo/1.16.3/dojo/dojo.js"></script> -->
    <script src="/DOJO/dojo-release-1.17.3/dojo/dojo.js"></script>

    <script>
        require([
            "dojo/dom",
            "dojo/on",
            "dojo/request",
            "dojo/domReady!"
        ], function (dom, on, request) {

            var getBtn = dom.byId("getBtn");
            var postBtn = dom.byId("postBtn");

            on(getBtn, "click", function () {
                var name = dom.byId("name").value;

                request.get("http://localhost:8082/Dojo_Backend/dojoServlet", {
                    query: { name: name },
                    handleAs: "text"
                }).then(function (response) {
                    dom.byId("result").innerHTML = response;
                }, function (err) {
                    console.error(err);
                });
            });

            on(postBtn, "click", function () {
                var name = dom.byId("name").value;

                request.post("http://localhost:8082/Dojo_Backend/dojoServlet", {
                    data: { name: name },
                    handleAs: "text"
                }).then(function (response) {
                    dom.byId("result").innerHTML = response;
                }, function (err) {
                    console.error(err);
                });
            });
        });
    </script>
</head>

<body>
    <h2>Dojo Ajax (No Window)</h2>

    <input type="text" id="name" placeholder="Enter Name">
    <br><br>

    <button id="getBtn">GET Method</button>
    <button id="postBtn">POST Method</button>

    <p id="result"></p>
</body>
</html>
